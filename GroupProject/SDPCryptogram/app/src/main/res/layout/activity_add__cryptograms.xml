<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.seclass.sdpcryptogram.Add_Cryptograms">

    <Button
        android:id="@+id/returnManageCryptogramButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Return"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/saveCryptogramButton"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="77dp"
        app:layout_constraintLeft_toLeftOf="@+id/saveCryptogramButton" />

    <Button
        android:id="@+id/button"
        android:layout_width="118dp"
        android:layout_height="48dp"
        android:layout_marginBottom="6dp"
        android:onClick="onEncodeClick"
        android:text="ENCODE"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/saveCryptogramButton"
        app:layout_constraintRight_toRightOf="@+id/saveCryptogramButton"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="47dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintRight_toLeftOf="@+id/editSolutionButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/saveCryptogramButton"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="57dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="59dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playerUserName" />

    <Button
        android:id="@+id/saveCryptogramButton"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="60dp"
        android:onClick="onSaveClick"
        android:text="Save Cryptogram"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/returnManageCryptogramButton"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1" />

    <EditText
        android:id="@+id/inputPhrase"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="InputPhrase"
        android:inputType="text"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/encodedPhrase"
        android:layout_marginTop="81dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/encodedPhrase"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/encodedPhrase"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="EncodedPhrase"
        android:inputType="text"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/button"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/inputPhrase"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/playerUserName" />

    <EditText
        android:id="@+id/playerUserName"
        android:layout_width="241dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="MessageFromWebservice"
        android:inputType="text"
        app:layout_constraintRight_toLeftOf="@+id/button"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/editSolutionButton"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/matchSolution"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/button" />

    <Button
        android:id="@+id/editSolutionButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Edit Solution"
        android:textStyle="bold"
        app:layout_constraintRight_toLeftOf="@+id/button"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/button"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/saveCryptogramButton" />

</android.support.constraint.ConstraintLayout>