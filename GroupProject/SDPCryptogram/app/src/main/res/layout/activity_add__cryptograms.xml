<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admin"
    tools:context="edu.gatech.seclass.sdpcryptogram.Add_Cryptograms"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Button
        android:id="@+id/returnManageCryptogramButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="66dp"
        android:layout_marginTop="63dp"
        android:onClick="onReturnClick"
        android:text="Return"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/playerUserName"
        app:layout_constraintRight_toRightOf="@+id/playerUserName"
        app:layout_constraintTop_toTopOf="@+id/button"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="93dp"
        android:layout_height="48dp"
        android:onClick="onEncodeClick"
        android:text="ENCODE"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/returnManageCryptogramButton"
        android:layout_marginBottom="131dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="0dp"
        android:layout_height="47dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginStart="49dp"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveCryptogramButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="99dp"
        android:layout_height="48dp"
        android:layout_marginBottom="10dp"
        android:onClick="onSaveClick"
        android:text="Save "
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/returnManageCryptogramButton"
        app:layout_constraintLeft_toLeftOf="@+id/returnManageCryptogramButton"
        app:layout_constraintTop_toTopOf="@+id/button"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputPhrase"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="InputPhrase"
        android:inputType="text"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/encodedPhrase"
        android:layout_marginStart="57dp"
        android:layout_marginEnd="57dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/encodedPhrase"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="EncodedPhrase"
        android:inputType="text"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/playerUserName"
        app:layout_constraintRight_toRightOf="@+id/inputPhrase"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="13dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputPhrase" />

    <EditText
        android:id="@+id/playerUserName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="MessageFromWebservice"
        android:inputType="text"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/returnManageCryptogramButton"
        app:layout_constraintRight_toRightOf="@+id/encodedPhrase"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="95dp"
        app:layout_constraintLeft_toLeftOf="@+id/encodedPhrase" />

</android.support.constraint.ConstraintLayout>